@page "/"
@using MagicDatabaseUI.Entities

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>
@if(CardsOwned == null)
{
<p>Loading...</p>
}
else
{
		<table class="table table-striped table-dark table-hover">
			<thead>
				<tr>
					<th scope="col">Quantity</th>
					<th scope="col">Name</th>
					<th scope="col">Mana Value</th>
					<th scope="col">Type</th>
				</tr>
			</thead>
			<tbody>
				<Virtualize Context="Card" Items="CardsOwned">
					<tr>
						<td>@Card.Quantity</td>
						<td>@Card.Name</td>
						<td>@Card.ManaValue</td>
						<td>@Card.Type</td>
					</tr>
				</Virtualize>


			</tbody>
		</table>
	}


@code{
	private List<Card> CardsOwned {get; set;}

	protected override async Task OnInitializedAsync(){
		CardsOwned = new();
	}
}